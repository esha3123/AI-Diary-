<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/CSS/home.css">

<!-- Main Dashboard Container -->
<div class="dashboard-container">
    <!-- Welcome Header -->
    <div class="welcome-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="welcome-content">
                        <h1 class="welcome-title">
                            Welcome back, <span class="user-name">[Username]</span> 
                            <span class="wave-emoji">üëã</span>
                        </h1>
                        <p class="welcome-subtitle">Ready to capture today's thoughts and feelings?</p>
                        <div class="quick-stats">
                            <div class="stat-item">
                                <i class="fas fa-book"></i>
                                <span>[X] Entries</span>
                            </div>
                            <div class="stat-item">
                                <i class="fas fa-fire"></i>
                                <span>[X] Day Streak</span>
                            </div>
                            <div class="stat-item">
                                <i class="fas fa-heart"></i>
                                <span>[Current Mood]</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="new-entry-card">
                        <a href="/AI-diary/new" class="new-entry-btn">
                            <i class="fas fa-plus"></i>
                            <span>New Entry</span>
                        </a>
                        <p class="new-entry-text">Start writing your thoughts...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="container main-content">
        <div class="row">
            <!-- Left Column -->
            <div class="col-lg-8">
                <!-- Recent Entries Section -->
                <div class="section-card recent-entries">
                    <div class="section-header">
                        <h3><i class="fas fa-clock"></i> Recent Entries</h3>
                        <a href="/AI-diary/entries" class="view-all-link">View All</a>
                    </div>
                    
                    <div class="entries-list">
                        <!-- Entry items will be populated from database -->
                        <div class="entry-item">
                            <div class="entry-content">
                                <div class="entry-header">
                                    <h4 class="entry-title">[Entry Title]</h4>
                                    <span class="entry-mood">[Mood Emoji]</span>
                                </div>
                                <p class="entry-preview">[Entry preview text...]</p>
                                <div class="entry-meta">
                                    <span class="entry-date">
                                        <i class="fas fa-calendar"></i> [Entry Date]
                                    </span>
                                    <div class="entry-actions">
                                        <button class="action-btn view-btn" title="View">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="action-btn listen-btn" title="Listen">
                                            <i class="fas fa-volume-up"></i>
                                        </button>
                                        <button class="action-btn edit-btn" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn delete-btn" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- More entries will be dynamically loaded here -->
                        <div class="no-entries" style="display: none;">
                            <div class="empty-state">
                                <i class="fas fa-book-open"></i>
                                <h4>No entries yet</h4>
                                <p>Start your journaling journey by creating your first entry!</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Weekly/Monthly Summary -->
                <div class="section-card summary-section">
                    <div class="section-header">
                        <h3><i class="fas fa-chart-line"></i> Summary Reports</h3>
                        <span class="summary-badge">AI Powered</span>
                    </div>
                    <div class="summary-content">
                        <div class="summary-options">
                            <button class="summary-btn weekly-btn active">
                                <i class="fas fa-calendar-week"></i>
                                <span>Weekly Summary</span>
                            </button>
                            <button class="summary-btn monthly-btn">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Monthly Summary</span>
                            </button>
                        </div>
                        <div class="summary-placeholder">
                            <i class="fas fa-microphone"></i>
                            <p>AI voice summaries will be available here</p>
                            <small>Coming soon - Weekly and monthly diary insights</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-4">
                <!-- Mood Analytics Preview -->
                <div class="section-card mood-analytics">
                    <div class="section-header">
                        <h3><i class="fas fa-chart-line"></i> This Week's Mood</h3>
                        <a href="/AI-diary/analytics" class="view-details-link">View Details</a>
                    </div>
                    <div class="mood-summary">
                        <div class="mood-stats">
                            <div class="mood-stat">
                                <span class="mood-emoji">üòä</span>
                                <span class="mood-count">[X]</span>
                                <span class="mood-label">Happy</span>
                            </div>
                            <div class="mood-stat">
                                <span class="mood-emoji">üòê</span>
                                <span class="mood-count">[X]</span>
                                <span class="mood-label">Neutral</span>
                            </div>
                            <div class="mood-stat">
                                <span class="mood-emoji">üòî</span>
                                <span class="mood-count">[X]</span>
                                <span class="mood-label">Sad</span>
                            </div>
                        </div>
                        <div class="mood-chart">
                            <div class="chart-placeholder">
                                <i class="fas fa-chart-bar"></i>
                                <span>Mood Trend Chart</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Time Capsule Reminder -->
                <div class="section-card time-capsule">
                    <div class="section-header">
                        <h3><i class="fas fa-hourglass-half"></i> Time Capsule</h3>
                    </div>
                    <div class="capsule-content">
                        <div class="capsule-message">
                            <i class="fas fa-envelope"></i>
                            <p><strong>Time Capsule:</strong></p>
                            <p>[Your future/past messages will appear here]</p>
                        </div>
                        <span class="capsule-date">No messages yet</span>
                    </div>
                </div>

                <!-- Quick Navigation -->
                <div class="section-card quick-nav">
                    <div class="section-header">
                        <h3><i class="fas fa-compass"></i> Quick Links</h3>
                    </div>
                    <div class="nav-links">
                        <a href="/AI-diary/public" class="nav-link">
                            <i class="fas fa-globe"></i>
                            <span>Public Wall</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a href="/AI-diary/analytics" class="nav-link">
                            <i class="fas fa-chart-pie"></i>
                            <span>Analytics</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a href="/AI-diary/profile" class="nav-link">
                            <i class="fas fa-user"></i>
                            <span>Profile</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a href="/logout" class="nav-link logout-link">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <!-- Theme Toggle -->
                <div class="theme-toggle-card">
                    <div class="theme-toggle">
                        <span class="theme-label">Light Mode</span>
                        <label class="toggle-switch">
                            <input type="checkbox" id="themeToggle">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/home.js"></script>