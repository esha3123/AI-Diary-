<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/CSS/home.css">

<!-- Main Dashboard Container -->
<div class="dashboard-container">
    <!-- Welcome Header -->
    <div class="welcome-section">
        <div class="welcome-container">
            <div class="welcome-grid">
                <div class="welcome-content-area">
                    <div class="welcome-content">
                        <h1 class="welcome-title">
                            Welcome back, <span class="user-name">Nitin/Esha</span> 
                            <span class="wave-emoji">👋</span>
                        </h1>
                        <p class="welcome-subtitle">Ready to capture today's thoughts and feelings?</p>
                        <div class="quick-stats">
                            <div class="stat-item">
                                <i class="fas fa-book"></i>
                                <span>12 Entries</span>
                            </div>
                            <div class="stat-item">
                                <i class="fas fa-fire"></i>
                                <span>5 Day Streak</span>
                            </div>
                            <div class="stat-item">
                                <i class="fas fa-heart"></i>
                                <span>Happy Mood</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="new-entry-area">
                    <div class="new-entry-card">
                        <a href="/AI-diary/new" class="new-entry-btn">
                            <i class="fas fa-plus"></i>
                            <span>New Entry</span>
                        </a>
                        <p class="new-entry-text">Start writing your thoughts...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="main-content-container">
        <div class="content-grid">
            <!-- Left Column -->
            <div class="left-column">
                <!-- Recent Entries Section -->
                <div class="section-card recent-entries">
                    <div class="section-header">
                        <h3><i class="fas fa-clock"></i> Recent Entries</h3>
                        <a href="/AI-diary/entries" class="view-all-link">View All</a>
                    </div>
                    
                    <div class="entries-list">
                        <!-- Entry Item 1 -->
                        <div class="entry-item">
                            <div class="entry-content">
                                <div class="entry-header">
                                    <h4 class="entry-title">A Beautiful Day in the Park</h4>
                                    <span class="entry-mood">😊</span>
                                </div>
                                <p class="entry-preview">Today I went for a walk in the central park and felt so peaceful...</p>
                                <div class="entry-meta">
                                    <span class="entry-date">
                                        <i class="fas fa-calendar"></i> July 3, 2025
                                    </span>
                                    <div class="entry-actions">
                                        <button class="action-btn view-btn" title="View">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="action-btn listen-btn" title="Listen">
                                            <i class="fas fa-volume-up"></i>
                                        </button>
                                        <button class="action-btn edit-btn" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn delete-btn" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Entry Item 2 -->
                        <div class="entry-item">
                            <div class="entry-content">
                                <div class="entry-header">
                                    <h4 class="entry-title">Challenging Day at Work</h4>
                                    <span class="entry-mood">😔</span>
                                </div>
                                <p class="entry-preview">Work was quite overwhelming today, but I managed to push through...</p>
                                <div class="entry-meta">
                                    <span class="entry-date">
                                        <i class="fas fa-calendar"></i> July 2, 2025
                                    </span>
                                    <div class="entry-actions">
                                        <button class="action-btn view-btn" title="View">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="action-btn listen-btn" title="Listen">
                                            <i class="fas fa-volume-up"></i>
                                        </button>
                                        <button class="action-btn edit-btn" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn delete-btn" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Entry Item 3 -->
                        <div class="entry-item">
                            <div class="entry-content">
                                <div class="entry-header">
                                    <h4 class="entry-title">Weekend Adventures</h4>
                                    <span class="entry-mood">🎉</span>
                                </div>
                                <p class="entry-preview">Had an amazing weekend with friends, lots of laughter and good memories...</p>
                                <div class="entry-meta">
                                    <span class="entry-date">
                                        <i class="fas fa-calendar"></i> June 30, 2025
                                    </span>
                                    <div class="entry-actions">
                                        <button class="action-btn view-btn" title="View">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="action-btn listen-btn" title="Listen">
                                            <i class="fas fa-volume-up"></i>
                                        </button>
                                        <button class="action-btn edit-btn" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn delete-btn" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- AI Cheer-up Box -->
                <div class="section-card ai-cheerup">
                    <div class="section-header">
                        <h3><i class="fas fa-robot"></i> AI Insight</h3>
                        <span class="ai-badge">Powered by AI</span>
                    </div>
                    <div class="cheerup-content">
                        <div class="ai-message">
                            <p>"You've been showing great resilience this week! Even through challenging moments, you've maintained a positive outlook. Keep nurturing that inner strength! 💙"</p>
                        </div>
                        <button class="refresh-insight-btn">
                            <i class="fas fa-refresh"></i> Get New Insight
                        </button>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="right-column">
                <!-- Mood Analytics Preview -->
                <div class="section-card mood-analytics">
                    <div class="section-header">
                        <h3><i class="fas fa-chart-line"></i> This Week's Mood</h3>
                        <a href="/AI-diary/analytics" class="view-details-link">View Details</a>
                    </div>
                    <div class="mood-summary">
                        <div class="mood-stats">
                            <div class="mood-stat">
                                <span class="mood-emoji">😊</span>
                                <span class="mood-count">3</span>
                                <span class="mood-label">Happy</span>
                            </div>
                            <div class="mood-stat">
                                <span class="mood-emoji">😐</span>
                                <span class="mood-count">2</span>
                                <span class="mood-label">Neutral</span>
                            </div>
                            <div class="mood-stat">
                                <span class="mood-emoji">😔</span>
                                <span class="mood-count">1</span>
                                <span class="mood-label">Sad</span>
                            </div>
                        </div>
                        <div class="mood-chart">
                            <div class="chart-placeholder">
                                <i class="fas fa-chart-bar"></i>
                                <span>Mood Trend Chart</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Time Capsule Reminder -->
                <div class="section-card time-capsule">
                    <div class="section-header">
                        <h3><i class="fas fa-hourglass-half"></i> Time Capsule</h3>
                    </div>
                    <div class="capsule-content">
                        <div class="capsule-message">
                            <i class="fas fa-envelope"></i>
                            <p><strong>Reminder from 2 weeks ago:</strong></p>
                            <p>"Don't give up on your dreams! You're stronger than you think! 🌟"</p>
                        </div>
                        <span class="capsule-date">Posted: June 20, 2025</span>
                    </div>
                </div>

                <!-- Quick Navigation -->
                <div class="section-card quick-nav">
                    <div class="section-header">
                        <h3><i class="fas fa-compass"></i> Quick Links</h3>
                    </div>
                    <div class="nav-links">
                        <a href="/AI-diary/public" class="nav-link">
                            <i class="fas fa-globe"></i>
                            <span>Public Wall</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a href="/AI-diary/analytics" class="nav-link">
                            <i class="fas fa-chart-pie"></i>
                            <span>Analytics</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a href="/AI-diary/profile" class="nav-link">
                            <i class="fas fa-user"></i>
                            <span>Profile</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a href="/logout" class="nav-link logout-link">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <!-- Theme Toggle -->
                <div class="theme-toggle-card">
                    <div class="theme-toggle">
                        <span class="theme-label">Dark Mode</span>
                        <label class="toggle-switch">
                            <input type="checkbox" id="themeToggle">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/home.js"></script>